@model JokesApp.Models.BlogPost

@{
    ViewData["Title"] = "Edit";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header text-center bg-primary text-white">
            <h2>Edit Blog Post</h2>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="BlogId" />

                <div class="mb-3">
                    <label asp-for="BlogTitle" class="form-label">Title</label>
                    <input asp-for="BlogTitle" class="form-control" placeholder="Enter blog title" />
                    <span asp-validation-for="BlogTitle" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BlogDescription" class="form-label">Description</label>
                    <textarea asp-for="BlogDescription" class="form-control" rows="4" placeholder="Enter blog description"></textarea>
                    <span asp-validation-for="BlogDescription" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BlogAuthor" class="form-label">Author</label>
                    <input asp-for="BlogAuthor" class="form-control" placeholder="Enter author name" />
                    <span asp-validation-for="BlogAuthor" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success btn-lg">Save Changes</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
