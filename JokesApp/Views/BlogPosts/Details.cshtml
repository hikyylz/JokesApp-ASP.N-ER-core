@model JokesApp.Models.BlogPost

@{
    ViewData["Title"] = "Details";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">@Model.BlogTitle</h2>
            <h5 class="card-subtitle text-muted text-center mb-3">by @Model.BlogAuthor</h5>
            <hr />
            <p class="card-text">@Model.BlogDescription</p>
        </div>
        <div class="card-footer text-center">
            <a class="btn btn-primary me-2" asp-action="Edit" asp-route-id="@Model?.BlogId">Edit</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
