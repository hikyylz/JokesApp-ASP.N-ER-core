@model IEnumerable<JokesApp.Models.BlogPost>

@{
    ViewData["Title"] = "Index";
}



<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<h4>BlogPosts</h4>
<p>
    <a asp-action="Create">Create New</a>
</p>
<hr />

<div class="container mt-5">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="https://revenuearchitects.com/wp-content/uploads/2017/02/shutterstock_767175502-1210x423.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.BlogTitle</h5>
                        <p class="card-text">@item.BlogDescription</p>
                        <a href="#" class="btn btn-primary">Daha fazla</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
